@{
    @model LevelVM
    ViewData["Title"] = "Edit Level";
}



<!--Start Main content container-->
<div class="main_content_container">
    <div class="main_container  main_menu_open">
        <!--Start system bath-->
        <div class="home_pass hidden-xs">
            <ul>
                <li class="bring_right"><span class="glyphicon glyphicon-home "></span></li>
                <li class="bring_right"><a asp-action="index"> المستويات الدراسية</a></li>
                <li class="bring_right"><a href=""> تعديل المستوى الدراسي  @Model.Name</a></li>
            </ul>
        </div>
        <!--/End system bath-->
        <div class="page_content">

            <h1 class="heading_title">تعديل المستوى الدراسي  @Model.Name</h1>


            <!--Start status alert-->
            @if (TempData.ContainsKey("error"))
            {

                <div class="alert alert-danger h4" role="alert">@TempData["error"]</div>
            }

            @if (TempData.ContainsKey("msg"))
            {
                <div class="alert alert-success h5" role="alert">@TempData["msg"]</div>
            }
            <!--/End status alert-->


            <div class="form">
                <form class="form-horizontal" method="post" asp-action="Edit">
                    <div asp-validation-summary="All" class=" alert-danger"></div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="hidden" asp-for="LevelId" class="form-control" placeholder="رقم المستوى">
                            <span class="text-danger" asp-validation-for="LevelId"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-2 control-label bring_right left_text"> المستوى</label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" placeholder="المستوى">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    
                    
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn btn-primary">تعديل </button>

                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
<!--/End Main content container-->