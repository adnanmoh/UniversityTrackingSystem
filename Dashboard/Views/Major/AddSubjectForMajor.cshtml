@{
    @model SubjectsInMajorsLevelVM
    @inject IRepositoryManager repository

    ViewData["Title"] = "Add Subject For Major";
    MajorVM data = (MajorVM)ViewData["Data"];

    var TermList = new List<Term>();
    var termRes = await repository.TermRepository.GetAll();
    if(termRes.Count > 0)
    {
        TermList = termRes.ToList();
    }

    var LevelList = new List<Level>();
    var LevelRes = await repository.LevelRepository.GetAll();
    if(LevelRes.Count > 0)
    {
        LevelList = LevelRes.ToList();
    }

    var SubjectList = new List<Subject>();
    var SubjectRes = await repository.SubjectRepository.GetAll();
    if(SubjectRes.Count > 0)
    {
        SubjectList = SubjectRes.ToList();
    }

    
}



<!--Start Main content container-->
<div class="main_content_container">
    <div class="main_container  main_menu_open">
        <!--Start system bath-->
        <div class="home_pass hidden-xs">
            <ul>
                <li class="bring_right"><span class="glyphicon glyphicon-home "></span></li>
                <li class="bring_right"><a asp-action="index">التخصصات الدراسية</a></li>
                <li class="bring_right"><a href="">اضافة مواد دراسية للتخصص @data.Name </a></li>
            </ul>
        </div>
        <!--/End system bath-->
        <div class="page_content">

            <h1 class="heading_title">اضافة مواد دراسية للتخصص @data.Name</h1>


            <!--Start status alert-->
            @if (TempData.ContainsKey("error"))
            {

                <div class="alert alert-danger h4" role="alert">@TempData["error"]</div>
            }

            @if (TempData.ContainsKey("msg"))
            {
                <div class="alert alert-success h5" role="alert">@TempData["msg"]</div>
            }
            <!--/End status alert-->
             <div class="form">
                <form class="form-horizontal" method="post" asp-action="AddSubjectForMajor">
                    <div asp-validation-summary="All" class=" alert-danger"></div>
                    <div class="form-group">
                        <label  class="col-sm-2 control-label bring_right left_text">اسم التخصص الدراسي</label>
                         <div class="col-sm-10">
                            <input  readonly class="form-control" value="@data.Name">
                            <span class="text-danger" asp-validation-for="MajorId"></span>
                        </div>
                    </div>
                     <div class="form-group">
                        <label asp-for="MajorId" class="col-sm-2 control-label bring_right left_text">التخصص الدراسي</label>
                         <div class="col-sm-10">
                            <input asp-for="MajorId" readonly class="form-control" value="@data.MajorId">
                            <span class="text-danger" asp-validation-for="MajorId"></span>
                        </div>
                    </div>
                     <div class="form-group">
                        <label asp-for="LevelId" class="col-sm-2 control-label bring_right left_text">المستوى الدراسي</label>
                         <div class="col-sm-10">
                            <select  asp-for="LevelId" class="form-control" asp-items='@new SelectList(LevelList,"LevelId","Name")'>
                                <option value="@null">اختر مستوى دراسي...</option>
                            </select>
                        
                            <span class="text-danger" asp-validation-for="LevelId"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubjectId" class="col-sm-2 control-label bring_right left_text">المادة الدراسية</label>
                         <div class="col-sm-10">
                            <select  asp-for="SubjectId" class="form-control" asp-items='@new SelectList(SubjectList,"SubjectId","Name")'>
                                <option value="@null">اختر مادة دراسية...</option>
                            </select>
                        
                            <span class="text-danger" asp-validation-for="SubjectId"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="TermId" class="col-sm-2 control-label bring_right left_text">الترم الدراسي</label>
                         <div class="col-sm-10">
                            <select  asp-for="TermId" class="form-control" asp-items='@new SelectList(TermList,"TermId","Name")'>
                                <option value="@null">اختر ترم دراسي...</option>
                            </select>

                            <span class="text-danger" asp-validation-for="TermId"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn btn-primary">اضافة </button>

                        </div>
                    </div>


                </form>
                 
            </div>
           
        </div>
    </div>
</div>
<!--/End Main content container-->