@{
    ViewData["Title"] = "Teacher Page";
    @model SearchTeacher ;
    List<SearchTeacher> data = (List<SearchTeacher>)ViewData["Data"];
    
    int TeacherCount;
    if (data == null)
    {
        TeacherCount = 0;
    }
    else
    {
        TeacherCount = data.Count();
    }

    
}
<!--Start Main content container-->
<div class="main_content_container">
    <div class="main_container  main_menu_open">
        <!--Start system bath-->
        <div class="home_pass hidden-xs">
            <ul>
                <li class="bring_right"><span class="glyphicon glyphicon-home "></span></li>
                <li class="bring_right"><a href="">إدارة المدرسين</a></li>
                <li class="bring_right"><a href="">البحث عن مدرس</a></li>
            </ul>
        </div>
        <!--/End system bath-->
        <div class="page_content">

            <h1 class="heading_title">البحث عن المدرس <span class="fa fa-search " style="margin: 5px;"></span></h1>


            <!--Start status alert-->
            <!--/End status alert-->

            <div class="form">
                <form method="post" class="form-horizontal" asp-action="index">
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-2 control-label bring_right left_text">اسم المدرس</label>
                        <div class="col-sm-10">
                            <input asp-for="Name" type="text" class="form-control" id="input0" placeholder="البحث بأسم المدرس">
                        </div>
                    </div>
                    <div id="additionalFilters" style="display:none;">
                        <div class="form-group">
                            <label asp-for="TeacherId" class="col-sm-2 control-label bring_right left_text"> رقم المدرس</label>
                            <div class="col-sm-10">
                                <input asp-for="TeacherId" type="number" class="form-control" id="input2" placeholder=" رقم المدرس">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="col-sm-2 control-label bring_right left_text"> رقم الهاتف </label>
                            <div class="col-sm-10">
                                <input asp-for="Phone" type="number" class="form-control" id="input3" placeholder="رقم الهاتف ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="col-sm-2 control-label bring_right left_text"> الايميل </label>
                            <div class="col-sm-10">
                                <input asp-for="Email" type="text" class="form-control" id="input3" placeholder="الايميل ">
                            </div>
                        </div>
                       
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn btn-primary"> البحث</button>
                            <button type="button" class="btn btn-default" onclick="showFilters()"> <span class="fa fa-filter"></span></button>
                        </div>
                    </div>
                </form>
            </div>
            @if (TeacherCount > 0)
            {
                <div class="wrap">
                    <a class="bring_left add-new" asp-action="Create">اضافة مدرس جديد <span style="padding-right: 8px;" class="fa fa-user-plus"></span></a>
                    <table class="table table-bordered">
                        <tr>
                            <td>#</td>
                            <td>رقم المدرس</td>
                            <td>اسم المدرس</td>
                            <td>رقم الهاتف</td>
                            <td>الايميل</td>
                            <td>التحكم</td>
                        </tr>

                        @{
                            var count = 1;
                            foreach (var i in data)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@i.TeacherId</td>
                                    <td>@i.Name</td>
                                    <td>@i.Phone</td>
                                    <td>@i.Email</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-Id="@i.TeacherId" class="btn alert-info">تعديل <i class="fa fa-fw fa-edit"></i></a>
                                        <a asp-action="Details" asp-route-Id="@i.TeacherId" class="btn alert-success"><b>تفاصيل </b><i class="fa fa-fw  fa-address-card"> </i></a>
                                    </td>
                                </tr>
                                count++;
                            }
                        }

                    </table>
                </div>
            }

            <!--Start status alert-->
            @if (TempData.ContainsKey("error"))
            {

                <div class="alert alert-danger h4" role="alert">@TempData["error"]</div>
            }

            @if (TempData.ContainsKey("msg"))
            {
                <div class="alert alert-success h5" role="alert">@TempData["msg"]</div>
            }
            <!--/End status alert-->


        </div>
    </div>
</div>

<!--/End Main content container-->

<script>
                function showFilters() {
        var filters = document.getElementById('additionalFilters');
        if (filters.style.display === 'none') {
            filters.style.display = 'block';
        } else {
            // إخفاء الفورمات
            filters.style.display = 'none';
            // حذف البيانات من الفورمات
            document.getElementById('input2').value = '';
            document.getElementById('input3').value = '';
            document.getElementById('input4').value = '';
        }
    }

</script>