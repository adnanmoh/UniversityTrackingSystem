@{
    @model SubjectVM
    ViewData["Title"] = "Edit Subject";

         var TypeList = new List<SelectListItem>
    {
        new SelectListItem { Text = "اساسي", Value = "اساسي" },
        new SelectListItem { Text = "متطلب", Value = "متطلب" }
    };

}



<!--Start Main content container-->
<div class="main_content_container">
    <div class="main_container  main_menu_open">
        <!--Start system bath-->
        <div class="home_pass hidden-xs">
            <ul>
                <li class="bring_right"><span class="glyphicon glyphicon-home "></span></li>
                <li class="bring_right"><a asp-action="index">إدارة المواد الدراسية</a></li>
                <li class="bring_right"><a asp-action="index">البحث عن مادة دراسية</a></li>
                <li class="bring_right"><a href="">تعديل المادة الدراسية:  @Model.Name</a></li>
            </ul>
        </div>
        <!--/End system bath-->
        <div class="page_content">

            <h1 class="heading_title">تعديل المادة الدراسية  @Model.Name</h1>


            <!--Start status alert-->
            @if (TempData.ContainsKey("error"))
            {

                <div class="alert alert-danger h4" role="alert">@TempData["error"]</div>
            }

            @if (TempData.ContainsKey("msg"))
            {
                <div class="alert alert-success h5" role="alert">@TempData["msg"]</div>
            }
            <!--/End status alert-->


           <div class="form">
                <form class="form-horizontal" method="post" asp-action="Edit">
                    <div asp-validation-summary="All" class=" alert-danger"></div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="hidden" asp-for="SubjectId" class="form-control" placeholder="اسم المادة الدراسية">
                            <span class="text-danger" asp-validation-for="SubjectId"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-2 control-label bring_right left_text">اسم المادة الدراسية</label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" placeholder="اسم المادة الدراسية">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="col-sm-2 control-label bring_right left_text">نوع المادة الدراسية</label>
                        <div class="col-sm-10">
                            <select asp-for="Type" class="form-control" asp-items='@new SelectList(TypeList,"Text","Value")'>
                                <option value="@null">اختر نوع للمادة...</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Type"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input asp-for="Status" value="@true" class="form-control" type="hidden">
                            <span class="text-danger" asp-validation-for="Status"></span>
                        </div>

                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn btn-primary">تعديل </button>

                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
<!--/End Main content container-->